<div class="card-form-login">
    <h1>Login</h1>
    <%if(msg){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Falha na autenticação!</strong> Usuário ou senha invalido
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>

            <form id="form-login" method="POST" action="/">
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class='fas fa-user-circle' style='font-size:24px'></i></span>
                        </div>
                        <input id="usuario-login" type="text" name="usuario" class="form-control" placeholder="Nome do usuario" aria-label="Username" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1"><i class='fas fa-lock' style='font-size:24px'></i></span>
                        </div>
                        <input id="senha-login" type="password" name="senha" class="form-control" aria-label="Username" aria-describedby="basic-addon1" placeholder="Digite a senha">
                    </div>
                </div>
                <button id="submit-login" type="submit" class="btn btn-warning">Entrar<i class="fas fa-sign-in-alt" aria-hidden="true"></i></button>
            </form>
</div>