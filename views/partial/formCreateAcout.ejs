<div class="card-form-login">
    <h1>Nova Conta</h1>
    <span id="msg"></span>
    <form id="form" method="POST" action="/nova-conta">
        <div class="form-group" style="margin-bottom: 2px;margin-top: 2;">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i id=""  class='far fa-id-card' style='font-size:24px'></i></span>
                </div>
                <input id="nome" type="text" name="nome" class="form-control" placeholder="Nome Completo" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 2px;margin-top: 2;">
            <div class="input-group mb-3" style="margin-bottom: 2px;margin-top: 2;">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class='fas fa-user-circle' style='font-size:24px'></i></span>
                </div>
                <input id="usuario" type="text" name="usuario" class="form-control" placeholder="Nome do usuario" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="form-group" style="margin-bottom: 2px;margin-top: 2;">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class='fas fa-lock' style='font-size:24px'></i></span>
                </div>
                <input id="senha" type="password" name="senha" class="form-control" aria-label="Username" aria-describedby="basic-addon1" placeholder="Digite a senha">
            </div>
        </div>
        <div class="form-group">
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class='fas fa-lock' style='font-size:24px'></i></span>
                </div>
                <input id="confirma-senha" type="password" class="form-control" aria-label="Username" aria-describedby="basic-addon1" placeholder="Confirme a senha ">
            </div>
        </div>
        <button id="submit" type="submit" class="btn btn-warning">Salvar<i class="fas fa-save" aria-hidden="true"></i></button>
    </form>
</div>